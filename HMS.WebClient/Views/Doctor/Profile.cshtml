@model HMS.Shared.Entities.Doctor

@{
    ViewData["Title"] = "Doctor Profile";
    Layout = "_DoctorLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Doctor Profile</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <form asp-action="UpdateProfile" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Role" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Full Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CNP" class="form-label">CNP</label>
                            <input asp-for="CNP" class="form-control" />
                            <span asp-validation-for="CNP" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Department.Name" class="form-label">Department</label>
                            <input asp-for="Department.Name" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="YearsOfExperience" class="form-label">Years of Experience</label>
                            <input asp-for="YearsOfExperience" class="form-control" type="number" />
                            <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LicenseNumber" class="form-label">License Number</label>
                            <input asp-for="LicenseNumber" class="form-control" />
                            <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="MedicalHistory" class="btn btn-secondary">View Medical History</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 